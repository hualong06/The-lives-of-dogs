{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Build SDL2 Game",
            "command": "C:/msys64/ucrt64/bin/g++.exe",
            "args": [
                "src/main.cpp",
                "src/dog.cpp",
                "src/sheep.cpp",
                "src/input.cpp",
                "src/ui.cpp",
                "src/utils.cpp",
                "-o",
                "out/game.exe",
                "-I", "C:/msys64/ucrt64/include",
                "-L", "C:/msys64/ucrt64/lib",
                "-lmingw32",
                "-lSDL2main",
                "-lSDL2",
                "-lSDL2_image",
                "-mwindows"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Compiler for SDL2"
        }
    ]
}